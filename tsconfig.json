{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "downlevelIteration": true,
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx"
  },
  "include": ["src", "src/custom.d.ts"]
}